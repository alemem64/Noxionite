{
  "functions": {
    "pages/api/generate-social-image.ts": {
      "maxDuration": 30
    }
  },
  "buildCommand": "node scripts/install-chromium.mjs && npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "framework": "nextjs",
  "build": {
    "env": {
      "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": "1",
      "PUPPETEER_EXECUTABLE_PATH": "/usr/bin/chromium-browser"
    }
  }
}